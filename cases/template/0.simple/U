FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

 
dimensions      [0 1 -1 0 0 0 0];
            
internalField   uniform (0.1 0 0);

boundaryField
{
    inlet
    {
        type            freestreamVelocity;
        freestreamValue $internalField;
    }

    outlet
    {
        type            freestreamVelocity;
        freestreamValue $internalField;
    }
    
    upper
    {
        type            freestreamVelocity;
        freestreamValue $internalField; 
    }

    lower
    {
        type            freestreamVelocity;
        freestreamValue $internalField; 
    }

    front
    {
        type            empty;
    }
    back
    {
        type            empty;
    }
    
    ".*"
    {
        type            noSlip;
    }
}
    


// ************************************************************************* //
